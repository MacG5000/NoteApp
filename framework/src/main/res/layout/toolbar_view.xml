<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.android.framework.ui.FWConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.framework.ui.toolbar.FWToolbarLayout
            android:id="@+id/regular_toolbar"
            style="?fwToolbarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            tools:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.android.framework.ui.FWLabel
            android:id="@+id/toolbar_title"
            style="?fwToolbarTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/toolbar_sub_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Title" />

        <com.android.framework.ui.FWLabel
            android:id="@+id/toolbar_sub_title"
            style="?fwToolbarSubTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_xsmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_title"
            tools:text="SubTitle" />
    </com.android.framework.ui.FWConstraintLayout>
</layout>
