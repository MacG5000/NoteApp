<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.task.noteapp.db.entity.NoteEntity.ViewEntity" />
    </data>

    <com.android.framework.ui.FWCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_margin="@dimen/margin_medium">

        <com.android.framework.ui.FWConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small">

            <com.android.framework.ui.FWImageView
                android:id="@+id/image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <com.android.framework.ui.FWLabel
                style="@style/ListLabelTitleStyle"
                android:id="@+id/title"
                android:text="@{item.title}"
                android:layout_marginStart="@dimen/margin_medium"
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintEnd_toEndOf="parent"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.android.framework.ui.FWLabel
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/ListLabelDescStyle"
                android:text="@{item.description}"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Description"/>

            <com.android.framework.ui.FWImageView
                android:id="@+id/edited_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_goneMarginTop="@dimen/margin_medium"
                android:src="@drawable/edit"
                />

            <com.android.framework.ui.FWLabel
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/ListLabelDateStyle"
                android:text="@{item.createdDate}"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_medium"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintStart_toEndOf="@id/image"
                android:gravity="right"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="11.12.2021"/>
        </com.android.framework.ui.FWConstraintLayout>

    </com.android.framework.ui.FWCardView>
</layout>
